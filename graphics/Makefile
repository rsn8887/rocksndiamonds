GFX_CLASSIC_DIR = gfx_classic


# -----------------------------------------------------------------------------
# build targets
# -----------------------------------------------------------------------------

all: gfx_classic_dir

gfx_classic_dir:
	@$(MAKE) -C $(GFX_CLASSIC_DIR)

clean:
	@$(MAKE) -C $(GFX_CLASSIC_DIR) clean
